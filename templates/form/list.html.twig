{% extends 'base.html.twig' %}

{% block title %}Form List{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="text-center">Список форм</h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                {% for form in forms %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ form.title }}</td>
                        <td>{{ form.description }}</td>
                        <td>
                            <a href="{{ path('app_view_form', {'id': form.id}) }}" class="btn btn-info btn-sm">Просмотр</a>
                            {% if is_granted('ROLE_ADMIN') or app.user == form.author %}
                                <a href="{{ path('app_edit_form', {'id': form.id}) }}" class="btn btn-warning btn-sm">Редактировать</a>
                                <a href="{{ path('app_delete_form', {'id': form.id}) }}" class="btn btn-danger btn-sm">Удалить</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Формы отсутствуют</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
