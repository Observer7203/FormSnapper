{% endblock %}
    </head>
    
    <body class="auth-body-bg">
    <style>
    div#root {
    background: #f8f8fb;
    height: 100vh !important;
}
    </style>

<div class="container-fluid p-0">
    <div class="row g-0">
        <div class="col-xl-4">
            <div class="auth-full-page-content p-md-5 p-4">
                <div class="w-100">
                    <div class="d-flex flex-column h-100">
                        <div class="my-auto">
                            <h5 class="text-primary text-center">Create an account</h5>
                            <p class="text-muted text-center">Fill the form below</p>

                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">{{ message }}</div>
                            {% endfor %}

                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger">{{ message }}</div>
                            {% endfor %}

                            <form method="post" action="{{ path('app_register') }}">
                                {{ form_start(form) }}
                                {{ form_row(form.email) }}
                                {{ form_row(form.plainPassword.first) }}
                                {{ form_row(form.plainPassword.second) }}
                                <button class="btn btn-primary mt-3 w-100" type="submit">Register</button>
                                {{ form_end(form) }}
                            </form>
                            <div class="mt-4 text-center">
                                <p>Already have an account? <a href="{{ path('app_login') }}" class="fw-medium text-primary">Sign in</a></p>
                            </div>
                        </div>
                        <div class="mt-4 mt-md-5 text-center">
                            <p class="mb-0">&copy; {{ "now"|date("Y") }} User Management System</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Правая часть с фоном -->
        <div class="col-xl-8">
            <div class="auth-full-bg">
                <div class="w-100">
                    <div class="bg-overlay"></div>
                    <div class="d-flex h-100 flex-column">
                        <div class="p-4 mt-auto">
                            <div class="row justify-content-center">
                                <div class="col-lg-12">
                                    <div class="text-center">
                                        <h1 class="mb-3 main-title"><span class="text-primary text-white">AuthoList</span></h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="p-4 mt-auto">
                            <div class="row justify-content-center">
                                <div class="col-lg-7">
                                    <div class="text-center">
                                        <h4 class="mb-3">
                                            <i class="bx bxs-user text-primary h1 align-middle me-3"></i>
                                            <span class="text-primary">Welcome to User Management System</span>
                                        </h4>
                                        <p class="font-size-16 mb-4 text-white">
                                            "Easily manage user accounts with secure authentication, role-based access, and real-time status tracking. Simple, efficient, and powerful."
                                        </p>
                                        <h4 class="font-size-16 text-primary">AuthoList</h4>
                                        <p class="font-size-14 mb-0 text-white">2025</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Конец правой части -->
    </div>
</div>

<style>

.bg-overlay {
    position: absolute;
    height: 100%;
    width: 100%;
    right: 0;
    bottom: 0;
    left: 0;
    top: 0;
